<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        zhy:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <com.example.mycustom3.MyCustom3
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        zhy:circleWidth="15sp"
        zhy:firstColor="#D4F668"
        zhy:secondColor="#2F9DD2"
        zhy:speed="20" />

    <com.example.mycustom3.MyCustom3
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="40dp"
        zhy:circleWidth="20sp"
        zhy:firstColor="#16A3FA"
        zhy:secondColor="#D20F02"
        zhy:speed="10" />

</LinearLayout>
